{% set postgresql = salt["pillar.get"]("postgresql") %}

standby_mode = on

primary_conninfo = 'application_name={{ grains["fqdn"] }} host=pg.psf.io hostaddr={{ postgresql.primary }} port={{ postgresql.port }} user=replicator sslmode=verify-full sslcert=/etc/ssl/db/replicator.crt sslkey=/etc/ssl/db/replicator.key sslrootcert=/etc/ssl/certs/psf-ca.pem sslcrl=/etc/ssl/crl/psf-crl.pem'
