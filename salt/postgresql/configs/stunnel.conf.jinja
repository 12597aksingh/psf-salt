client = yes

{% for server, addrs in (salt["mine.get"]("roles:postgresql", "minealiases.psf_internal", expr_form="grain").items())|sort(attribute='0') %}
{% if addrs %}
[{{ server }}]
protocol = pgsql
accept = /var/run/stunnel4/{{ server }}/.s.PGSQL.5432
connect = {{ (addrs|sort())[0] }}:5432
options = NO_TICKET
retry = yes
{% endif %}
{% endfor %}
