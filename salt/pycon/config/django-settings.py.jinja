        "NAME": "pycon-{{ deployment }}",
        "USER": "pycon-{{ deployment }}",
        "PASSWORD": "{{ pillar["postgresql-users"]["pycon-" + deployment ] }}",
        "OPTIONS": {
            "hostaddr": "{{ addr }}",
            "sslmode": "verify-full",
            "sslrootcert": "/etc/ssl/certs/PSF_CA.pem",
