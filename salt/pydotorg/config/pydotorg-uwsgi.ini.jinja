[uwsgi]
uid=pydotorg
gid=pydotorg
env = DJANGO_SETTINGS_MODULE=pydotorg.settings.server
chdir = /srv/pydotorg/pythondotorg/
module = pydotorg.wsgi
socket = /srv/pydotorg/uwsgi.sock
pidfile = /srv/pydotorg/uwsgi.pid
daemonize = 127.0.0.1:8224
processes = 4
harakiri = 60
reload-on-as = 400
max-requests = 10000
master = 1
post-buffering = 8192
chmod-socket = 666
disable-logging = true
log-5xx = true
listen = 1024
# Avoid errors on aborted client connections. These will hopefully
# make Sentry reports less noisy. See PYDOTORG-STAGING-Z for an example
# of such an issue.
ignore-sigpipe
ignore-write-errors
disable-write-exception
