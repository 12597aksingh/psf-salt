    acl_rights_after = "{{ config.get('acls', {}).get('after', '') }}"

    {% if config.get('linkspam', True) %}
    # Link spam protection for public wikis
    # Needs a reliable internet connection.
    from MoinMoin.security.antispam import SecurityPolicy
