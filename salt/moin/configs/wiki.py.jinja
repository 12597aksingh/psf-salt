    # Where your mutable wiki pages are. You want to make regular
    # backups of this directory.
    data_dir = "{{ data_dir }}"

    # Security ----------------------------------------------------------

    # mvl 110304 add openid. requires anonymous sessions
    auth = [MoinAuth(), OpenIDAuth()]
    cookie_lifetime = (1, 12)

